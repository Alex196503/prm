@page
@model ProiectMediiBun.Pages.Reservations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.ID" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Reservation.Data_Rezervarii" class="control-label"></label>
                <input asp-for="Reservation.Data_Rezervarii" class="form-control" />
                <span asp-validation-for="Reservation.Data_Rezervarii" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Reservation.Durata" class="control-label">Durata(ore)</label>
                <input asp-for="Reservation.Durata" class="form-control" />
                <span asp-validation-for="Reservation.Durata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.MemberID" class="control-label">Member Name</label>
                <select asp-for="Reservation.MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
                <span asp-validation-for="Reservation.MemberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.TerenID" class="control-label"></label>
                <select asp-for="Reservation.TerenID" class="form-control" asp-items="ViewBag.TerenID">Teren tip</select>
                <span asp-validation-for="Reservation.TerenID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
